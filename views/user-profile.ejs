<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="User profile">
    <!-- custom CSS -->
    <link href="/stylesheets/user-profile.css" rel="stylesheet">
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>BirdSpotter - Profile</title>

</head>
<body class="d-flex flex-column min-vh-100">

<!-- Navbar -->
<%- include('navbar.ejs', {type}) %>

<main class="container-fluid p-0 d-flex">

    <div id="bdSidebar"
         class="d-flex flex-column
                    flex-shrink-0
                    p-3 bg-dark
                    text-white sidebar collapse min-vh-100">
        <ul class="mynav nav nav-pills flex-column mb-auto">

            <li class="nav-item mb-1">
                <a href="/users/<%= username %>">
                    <i class="fa-regular fa-user"></i>
                    <span>My profile</span>
                </a>
            </li>
            <li class="nav-item mb-1">
                <a href="/users/<%= username %>/myposts">
                    <i class="fa-regular fa-image"></i>
                    <span>My posts</span>
                </a>
            </li>
            <li class="nav-item mb-1">
                <a href="/users/<%= username %>/likedposts">
                    <i class="fa-regular fa-heart"></i>
                    <span>Liked posts</span>
                </a>
            </li>
            <li class="nav-item mb-1">
                <a href="/users/<%= username %>/savedposts">
                    <i class="fa-regular fa-bookmark"></i>
                    <span>Saved posts</span>
                </a>
            </li>
            <li class="nav-item mb-1">
                <a href="/users/<%= username %>/edit">
                    <i class="fa-regular fa-pen-to-square"></i>
                    <span>Edit profile</span>
                </a>
            </li>
        </ul>
    </div>

    <% if(page === 1) { %>

        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5 mb-5"
                     width="200px"
                     src="<%= user.picture %>">
                <span class="font-weight-bold"><%= user.username %></span>
                <span class="text-black-50"><%= user.email %></span>
            </div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-5">
                    <h4 class="text-right">My profile</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-3">
                        <small class="text-muted">First name</small>
                        <p><%= user.firstName %></p>
                    </div>
                    <div class="col-md-3">
                        <small class="text-muted">Last name</small>
                        <p><%= user.lastName %></p>
                    </div>
                </div>
            </div>
        </div>

    <% } else if(page === 2) { %>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-5">
                    <h4 class="text-right">My Posts</h4>
                </div>
            </div>
        </div>
    <% } else if(page === 3) { %>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Liked Posts</h4>
                </div>
            </div>
        </div>
    <% } else if(page === 4) { %>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Saved Posts</h4>
                </div>
            </div>
        </div>
    <% } else if(page === 5) { %>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Edit Profile</h4>
                </div>

                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">First name</label>
                        <label>
                            <input type="text" class="form-control" placeholder="first name" value="">
                        </label>
                    </div>
                    <div class="col-md-6"><label class="labels">Last name</label>
                        <label>
                            <input type="text" class="form-control" placeholder="last name" value="">
                        </label>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Email</label>
                        <label>
                            <input type="text" class="form-control" placeholder="email" value="">
                        </label>
                    </div>
                    <div class="col-md-6"><label class="labels">Password</label>
                        <label>
                            <input type="text" class="form-control" placeholder="last name" value="">
                        </label>
                    </div>
                </div>
                <div class="mt-5 text-center">
                    <button class="btn btn-primary profile-button" type="button">Save</button>
                </div>
            </div>
        </div>
    <% } %>

</main>

<!-- Footer -->
<%- include('footer.ejs') %>

<!-- Bootstrap core JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
<!--FontAwesome-->
<script src="https://kit.fontawesome.com/262955342a.js" crossorigin="anonymous"></script>
<script src="javascripts/profile.js"></script>
</body>
</html>
