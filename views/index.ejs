<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <!-- custom CSS -->
  <link href="/stylesheets/style.css" rel="stylesheet">
  <!-- Bootstrap core CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <title>BirdSpotter</title>

</head>
<body class="d-flex flex-column h-100">

<!-- Navbar -->
<%- include('navbar.ejs', {type}) %>

<main class="flex-shrink-0">

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Welcome to BirdSpotter!</h1>
        <p class="lead text-muted">A place to share our passion for local wildlife through photography.</p>
        <p>
          <% if (!aut) { %>
            <a href="/login" class="btn btn-primary my-2">Login to post pictures</a>
          <% } else { %>
            <a href="/new-post" class="btn btn-primary my-2">Post a picture</a>
          <% } %>
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <h1 class="text-center mb-5">Trending Posts</h1>
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

      <!-- cards go here -->
        <% for (let i = 0; i < posts.length && i < 16; i++) { %>
          <% const post = posts[i]; %>
          <div class="col-12 col-md-3 mx-auto mb-3">
              <%- include('post-card.ejs', { post: post }) %>
          </div>
        <% } %>

      </div>
    </div>
  </div>

</main>

<!-- Footer -->
<%- include('footer.ejs') %>

<!-- Bootstrap core JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<!--FontAwesome-->
<script src="https://kit.fontawesome.com/262955342a.js" crossorigin="anonymous"></script>
<!-- Masonry -->
<script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous" async></script>

</body>
</html>
