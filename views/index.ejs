<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Home page">
  <!-- custom CSS -->
  <link href="/stylesheets/style.css" rel="stylesheet">
  <!-- Bootstrap core CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <title>BirdSpotter</title>

</head>
<body class="d-flex flex-column h-100">

<!-- Navbar -->
<%- include('navbar.ejs') %>

<main class="flex-shrink-0 min-vh-100">

  <section class="text-center">
    <div id="carouselExampleDark" class="carousel carousel-dark slide">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="10000">
          <img src="../images/carousel1.jpg" class="d-block w-100 img-fluid" alt="...">
          <div class="carousel-caption d-none d-md-block d-sm-block">
            <h2 class="fw-normal text-white">Welcome to Birdspotter!</h2>
            <p class="fw-normal text-white">A place to share our passion for local wildlife through photography.</p>
            <% if (!aut) { %>
              <a href="/login" class="btn btn-light my-2">Login to post pictures</a>
            <% } else { %>
              <a href="/new-post" class="btn btn-light my-2">Post a picture</a>
            <% } %>
          </div>
        </div>
        <div class="carousel-item" data-bs-interval="2000">
          <img src="../images/carousel2.jpg" class="d-block w-100 img-fluid" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h2 class="fw-normal">Welcome to Birdspotter!</h2>
            <p class="fw-normal">A place to share our passion for local wildlife through photography.</p>
            <% if (!aut) { %>
              <a href="/login" class="btn btn-dark my-2">Login to post pictures</a>
            <% } else { %>
              <a href="/new-post" class="btn btn-dark my-2">Post a picture</a>
            <% } %>
          </div>
        </div>
        <div class="carousel-item">
          <img src="../images/carousel3.jpg" class="d-block img-fluid w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h2 class="fw-normal">Welcome to Birdspotter!</h2>
            <p class="fw-normal">A place to share our passion for local wildlife through photography.</p>
            <% if (!aut) { %>
              <a href="/login" class="btn btn-dark my-2">Login to post pictures</a>
            <% } else { %>
              <a href="/new-post" class="btn btn-dark my-2">Post a picture</a>
            <% } %>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <h1 class="text-center mb-5">Trending Posts</h1>
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

      <!-- cards go here -->
        <% for (let i = 0; i < posts.length && i < 16; i++) { %>
          <% const post = posts[i]; %>
          <div class="col-12 col-md-3 mx-auto mb-3">
              <%- include('post-card.ejs', { post: post }) %>
          </div>
        <% } %>

      </div>
    </div>
  </div>

</main>

<!-- Footer -->
<%- include('footer.ejs') %>

<!-- Bootstrap core JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<!--FontAwesome-->
<script src="https://kit.fontawesome.com/262955342a.js" crossorigin="anonymous"></script>
</body>
</html>
