<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <!-- custom CSS -->
    <link href="/stylesheets/style.css" rel="stylesheet">
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>BirdSpotter</title>

</head>
<body class="d-flex flex-column h-100">

<!-- Navbar -->
<%- include('navbar.ejs', {type}) %>

<main class="flex-shrink-0">

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                <!-- cards go here -->
                <div class="row">
                    
                    <% postsOnPage.forEach(function(post) { %>
                    <div class="col-12 col-md-6 mx-auto mb-3 post_mod">
                        <a class="post_container" href="/posts/<%=post.id%>">
                            <%- include("post-card.ejs", { post: post}) %>
                        </a>
                    </div>
                    <% }); %>
                    
                </div>

                <% if(totalPages > 1) { %>
                
                    <nav aria-label="...">
                        <ul class="pagination justify-content-center">
                            <%if(currentPage-1 >= 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="/posts?page=<%= currentPage-1 %>">Previous</a>
                                </li>
                            <%} else {%>
                                <li class="page-item disabled">
                                    <a class="page-link">Previous</a>
                                </li>
                            <%}%>
                            <% for (let page = 1; page <= totalPages; page++) { %>
                                <% if(currentPage === page) { %>
                                <li class="page-item disabled">
                                    <a class="page-link"><%=currentPage%></a>
                                </li>
                                <% }else{ %>
                                    <li class="page-item"><a class="page-link" href="/posts?page=<%= page %>"><%= page %></a></li>
                                <% } %>
        
                            <% } %>
                            <% if(currentPage+1 <= totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="/posts?page=<%= currentPage+1 %>">Next</a>
                                </li>
                            <%} else {%>
                                <li class="page-item disabled">
                                    <a class="page-link">Next</a>
                                </li>
                            <%}%>
                        </ul>
                    </nav>

                <% } %>

            </div>
        </div>
    </div>

</main>

<!-- Footer -->
<%- include('footer.ejs') %>

<!-- Bootstrap core JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<!--FontAwesome-->
<script src="https://kit.fontawesome.com/262955342a.js" crossorigin="anonymous"></script>

</body>
</html>