<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <!-- custom CSS -->
    <link href="/stylesheets/post-page.css" rel="stylesheet">
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>BirdSpotter</title>

</head>
<body class="d-flex flex-column h-100">

<!-- Navbar -->
<%- include('navbar.ejs') %>

<main class="flex-shrink-0">

    <div class="min-vh-100 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <div class="shadow-lg">
                        <div class="d-flex align-items-center">
                            <div class="d-none d-md-block d-lg-block">
                                <img src="<%= post.photoPath %>" class="objectFit" alt="post image"/>
                            </div>

                                <div class="p-5">
                                    <div class="d-flex bd-highlight">
                                        <h1 class="me-auto"><%=post.title%></h1>

                                        <% if(!liked) {%>

                                        <form class="mt-3 me-3 ">
                                            <button type="submit" class="btn btn-light">
                                                <i class="fa-regular fa-heart"></i>
                                            </button>
                                        </form>

                                        <% } else { %>

                                            <form class="mt-3 me-3 ">
                                                <button type="submit" class="btn btn-light">
                                                    <i class="fa-solid fa-heart"></i>
                                                </button>
                                            </form>

                                        <% } %>

                                        <div class="mt-3 bd-highlight"><%=post.likes%></div>
                                    </div>
                                    <h5 class="text-muted">posted by <a class="text-decoration-none" href="#"><%=post.op%></a></h5>
                                    <div class="row flex-grow-0 p-1">
                                        <small class="card-text text-muted"><i class="fa-solid fa-calendar"></i><%= post.date %></small>
                                        <small class="card-text text-muted"><i class="fa-solid fa-dove"></i><%= post.bird %></small>
                                        <small class="card-text text-muted"><i class="fa-solid fa-location-dot"></i><%= post.location %></small>
                                        <small class="card-text text-muted"><i class="fa-solid fa-location-dot"></i><%= post.likes %></small>
                                    </div>
                                    <div class="custom-form-group mt-3">
                                        <p class="text-wrap"><%=post.comment%></p>
                                    </div>
                                    <div class="mt-5">
                                        <h3 class="customHeading">Comments</h3>
                                    </div>
                                </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>

<!-- Footer -->
<%- include('footer.ejs') %>

<!-- Bootstrap core JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<!--FontAwesome-->
<script src="https://kit.fontawesome.com/262955342a.js" crossorigin="anonymous"></script>

</body>
</html>