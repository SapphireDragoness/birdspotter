<div class="card mb-3" style="max-width: 700px; max-height: 150px">
    <a href="/users/<%= f.username %>/posts">
        <div class="row g-0">
            <div class="col-md-3">
                <img src="../<%= f.picture %>" style="max-height: 150px" class="rounded-circle img-fluid p-2"
                     alt="profile picture">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title"><%= f.username %></h3>
                    <p class="card-text"><%= f.about %></p>
                </div>
            </div>
        </div>
    </a>
</div>