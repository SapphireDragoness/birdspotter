<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <link href="stylesheets/login-register.css" rel="stylesheet">
    <title>BirdSpotter</title>

    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body class="text-center">

<main class="form-signin">

    <div class="min-vh-100 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-sm-7 mx-auto">
                    <div class="shadow-lg">
                        <div class="d-flex align-items-center">
                            <div class="d-none d-md-block d-lg-block">
                                <img src="images/heron-login.jpg" class="objectFit" alt="heron login"/>
                            </div>

                            <% if(login) { %>

                                <div class="p-4" id="formPanel">
                                    <div class="text-center">
                                        <h1 class="customHeading h3 text-uppercase">Login</h1>
                                    </div>
                                    <form action="/login" method="POST">
                                        <% if(failure) { %>
                                            <div class="row">
                                                <div class="alert alert-danger alert-dismissible fade show text-center w-75 mt-3 mx-auto" role="alert">
                                                    <strong>Errore: <%= message %></strong>
                                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                </div>
                                            </div>
                                        <% } %>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="username">Username</label>
                                            <input type="text" id="username" class="pb-1" placeholder="Your username" name="username"/><span class="pb-1"></span>
                                        </div>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="password">Password</label>
                                            <input type="password" id="password" class="pb-1" placeholder="Your password" name="password"/><span class="pb-1"></span>
                                        </div>
                                        <div class="mt-5">
                                            <button type="submit" class="w-100 p-2 d-block custom-btn" >Login</button>
                                        </div>
                                    </form>
                                </div>

                            <% } else { %>

                                <div class="p-4" id="formPanel">
                                    <div class="text-center">
                                        <h1 class="customHeading h3 text-uppercase">Register</h1>
                                    </div>
                                    <form action="/register" method="POST">
                                        <% if(failure) { %>
                                            <div class="row">
                                                <div class="alert alert-danger alert-dismissible fade show text-center w-75 mt-3 mx-auto" role="alert">
                                                    <strong>Error: <%= message %></strong>
                                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                </div>
                                            </div>
                                        <% } %>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="firstName">First Name</label>
                                            <input type="text" id="firstName" class="pb-1" placeholder="Your first name" name="firstName"/><span class="pb-1"></span>
                                        </div>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="lastName">Last Name</label>
                                            <input type="text" id="lastName" class="pb-1" placeholder="Your last name" name="lastName"/><span class="pb-1"></span>
                                        </div>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="email">Email</label>
                                            <input type="email" id="email" class="pb-1" placeholder="Your email" name="email"/><span class="pb-1"></span>
                                        </div>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="username">Username</label>
                                            <input type="text" id="username" class="pb-1" placeholder="Your username" name="username"/><span class="pb-1"></span>
                                        </div>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="password">Password</label>
                                            <input type="password" id="password" class="pb-1" placeholder="Your password" name="password"/><span class="pb-1"></span>
                                        </div>
                                        <div class="mt-5">
                                            <button type="submit" class="w-100 p-2 d-block custom-btn" >Register</button>
                                        </div>
                                    </form>
                                </div>

                            <% } %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

</body>

<!-- Bootstrap core JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<!--FontAwesome-->
<script src="https://kit.fontawesome.com/262955342a.js" crossorigin="anonymous"></script>

</html>
