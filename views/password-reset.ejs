<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <link href="stylesheets/login-register.css" rel="stylesheet">
    <title>BirdSpotter</title>
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="text-center">

<main class="form-signin">

    <div class="min-vh-100 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-sm-7 mx-auto">
                    <div class="shadow-lg">
                        <div class="d-flex align-items-center">
                            <div class="d-none d-md-block d-lg-block">
                                <img src="images/heron-login.jpg" class="objectFit" alt="heron login"/>
                            </div>

                                <div class="p-4" id="formPanel">
                                    <div class="text-center">
                                        <h1 class="customHeading h3 text-uppercase">Password Reset</h1>
                                    </div>

                                    <% if(!sent) { %>
                                        <form action="/password-reset" method="POST">

                                            <% if(failure) { %>
                                                <div class="row">
                                                    <div class="alert alert-danger alert-dismissible fade show text-center w-75 mt-3 mx-auto" role="alert">
                                                        <strong>Error: <%= message %></strong>
                                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                    </div>
                                                </div>
                                            <% } %>

                                            <div class="custom-form-group mt-3">
                                                <label class="text-uppercase" for="email">Email</label>
                                                <input type="email" id="email" class="pb-1" placeholder="Your email" name="email" required/><span class="pb-1"></span>
                                            </div>
                                            <div class="mt-5">
                                                <button type="submit" class="w-100 p-2 d-block custom-btn" >Send reset link</button>
                                            </div>
                                        </form>
                                      <% } else { %>
                                        <div class="custom-form-group mt-3">
                                            <h3 class="pb-1">Check your email for password reset link.</h3><span class="pb-1"></span>
                                        </div>
                                    <% } %>
                                </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

</body>

<!-- Bootstrap core JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<!--FontAwesome-->
<script src="https://kit.fontawesome.com/262955342a.js" crossorigin="anonymous"></script>
<!-- Jquery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- password toggling and checking -->
<script src="javascripts/passwords.js"></script>
</html>
