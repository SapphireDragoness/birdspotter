<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <link rel="icon" type="image/x-icon" href="../images/favicon.ico">
    <!-- custom CSS -->
    <link href="/stylesheets/new-post.css" rel="stylesheet">
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- cropper.js css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" />
    <title>BirdSpotter - New Post</title>

</head>
<body class="d-flex flex-column min-vh-100">

<!-- Navbar -->
<%- include('navbar.ejs', {type}) %>

<main class="flex-shrink-0">

    <div class="mb-4 mt-4 p-5 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-sm-7 mx-auto">
                    <div class="shadow-lg">
                        <div class="d-flex align-items-center">
                            <div class="d-none d-md-block d-lg-block">

                            </div>

                                <div class="p-4" id="formPanel">
                                    <div class="text-center">
                                        <h1 class="customHeading h3 text-uppercase">New Post</h1>
                                    </div>
                                    <form action="/new-post" method="POST" enctype="multipart/form-data">
                                        <% if(failure) { %>
                                            <div class="row">
                                                <div class="alert alert-danger alert-dismissible fade show text-center w-75 mt-3 mx-auto" role="alert">
                                                    <strong>Error: <%= message %></strong>
                                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                </div>
                                            </div>
                                        <% } %>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="title">Title</label>
                                            <input type="text" id="title" class="pb-1" placeholder="A captivating title" name="title"/><span class="pb-1"></span>
                                        </div>

                                        <div class="custom-form-group mt-3">
                                            <label for="image" class="text-uppercase">Image
                                                (recommended size: 1000x1000 px)</label>
                                            <div id="imageContainer">
                                                <img id="imagePreview" src="" alt="Image Preview" style="display: none; max-width: 350px; padding: 10px;"/>
                                            </div>
                                            <input class="form-control" type="file" id="imageInput" name="image" accept="image/*"><span class="pb-1"></span>
                                        </div>

                                        <div class="autocomplete custom-form-group mt-3">
                                            <label class="text-uppercase" for="bird">Bird</label>
                                            <input type="text" id="bird" class="pb-1" placeholder="Bird pictured..." name="bird"><span class="pb-1"></span>
                                        </div>
                                        <div class="autocomplete custom-form-group mt-3">
                                            <label class="text-uppercase" for="location">Location</label>
                                            <input type="text" id="location" class="pb-1" placeholder="Where the photo was taken..." name="location"/><span class="pb-1"></span>
                                        </div>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="description">Description</label>
                                            <textarea maxlength="140" class="form-control mx-auto" id="description" name="description" placeholder="A short description" rows="3"></textarea>
                                            <p id="charCount">0/140</p>
                                        </div>
                                        <div class="mt-5">
                                            <button type="submit" class="w-100 p-2 d-block custom-btn" id="postButton">Post</button>
                                        </div>
                                    </form>
                                </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>

<!-- Footer -->
<%- include('footer.ejs') %>

<!-- Bootstrap core JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<!--FontAwesome-->
<script src="https://kit.fontawesome.com/262955342a.js" crossorigin="anonymous"></script>

<script src="javascripts/new-post-search.js" crossorigin="anonymous"></script>

<script src="javascripts/show-image.js"></script>

<script src="javascripts/word-count.js"></script>
</body>
</html>