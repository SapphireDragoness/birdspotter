<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <link href="stylesheets/login-register.css" rel="stylesheet">
    <title>BirdSpotter</title>

    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="text-center">
<%- include('navbar.ejs') %>
<main class="form-signin">

    <div class="min-vh-100 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-sm-7 mx-auto">
                    <div class="shadow-lg">
                        <div class="d-flex align-items-center">
                            <div class="d-none d-md-block d-lg-block">
                                <img src="images/hawk-search.jpg" class="objectFit" alt="heron login"/>
                            </div>

                                <div class="p-4" id="formPanel">
                                    <div class="text-center">
                                        <h1 class="customHeading h3 text-uppercase">Advanced search</h1>
                                    </div>

                                    <form action="/search" method="get" id="advancedSearchForm">

                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="title">Post title</label>
                                            <input type="text" id="title" placeholder="Title to search..." name="title" />
                                        </div>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="user">Poster username</label>
                                            <input type="text" id="user" placeholder="Username to search..." name="user" />
                                        </div>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="bird">Bird depicted</label>
                                            <input type="text" id="bird" placeholder="Bird to search..." name="bird" />
                                        </div>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="location">Location taken</label>
                                            <input type="text" id="location" placeholder="Location to search..." name="location" />
                                        </div>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="startDate">Start Date</label>
                                            <input type="date" id="startDate" name="startDate" />
                                        </div>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="endDate">End Date</label>
                                            <input type="date" id="endDate" name="endDate" />
                                        </div>
                                        <div class="mt-5">
                                            <button type="submit" class="w-100 p-2 d-block custom-btn">Search!</button>
                                        </div>

                                    </form>
                                </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

</body>
<%- include('footer.ejs') %>
<!-- common scripts -->
<%- include('scripts.ejs') %>
<!-- script for query concatenation -->
<script src="../javascripts/query-concatenation.js"></script>
</html>
